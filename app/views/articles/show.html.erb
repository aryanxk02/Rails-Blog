<%# show.html.erb renders the object title, body and Edit and Destroy Actions %>

<h1><%= @article.title %></h1>

<p><%= @article.body %></p>

<ul>
  <li><%= link_to "Edit", edit_article_path(@article) %></li>
  <li><%= link_to "Destroy", article_path(@article), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
</ul>

<h2>Comments</h2>
<%# renders the partial present in _comment.html.erb %>
<%= render @article.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form'  %>